<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:fitsSystemWindows="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="救助流浪动物，不是一个人的战役!"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="        当我们衣食无忧住在舒适的房子里,我们人类最好的朋友们,却无家可归!它们有的流浪街头，挨饿受冻……有的身染重病，被人类遗弃……不过有这样一类人,他们倾注所有,只为给流浪动物一个家."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="        无法成为他们那样伟大的人,只希望通过这样的方式帮助流浪动物,帮助他们."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="        救助方式:(公开、透明、钱尽其用)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="我会把每一笔爱心捐赠的收入及捐出的开支账单详细记录,并定期发布在微博上,爱心捐款的每一分钱都会用在流浪动物身上,绝不会从流浪动物身上赚钱."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="微博用户名:  半吊子不会幸福  "/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#262626"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不需要太多   表达爱心即可"
                android:textSize="20sp"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="微信捐赠"
                    />
                <Button
                    android:id="@+id/zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:text="支付宝捐赠"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="欢迎大家监督指正."/>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true" />
        </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
